<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/tab1_photo2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="person_icon_image"
            android:src="@drawable/person_icon" />

        <TextView
            android:id="@+id/tab1_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tab1_photo2"
            android:text="Steve jobs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tab1_phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab1_name2"
            android:layout_alignStart="@id/tab1_name2"
            android:layout_alignBottom="@id/tab1_photo2"
            android:layout_marginTop="5dp"
            android:text="010-1357-2468" />
</RelativeLayout>
